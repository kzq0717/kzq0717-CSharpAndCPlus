<Page
    x:Class="App2_CSharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App2_CSharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <TextBox
            Name="tbox_content"
            Margin="240,155,235,280"
            Text="TextBox"
            TextWrapping="Wrap"
            d:LayoutOverrides="HorizontalAlignment, VerticalAlignment, LeftPosition, RightPosition, TopPosition, BottomPosition" />
        <Button
            x:Name="Temperature"
            Width="130"
            Height="45"
            Margin="70,45,0,0"
            VerticalAlignment="Top"
            Click="Temperature_Click"
            ClickMode="Press"
            Content="Button" />

    </Grid>
</Page>
